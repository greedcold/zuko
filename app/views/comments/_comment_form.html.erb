<h2>Comments</h2>
<% @listing.comments.each do |comment| %>
  <p>
    <strong><% '#{username}:' %></strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for [@listing, @listing.comments.build], remote: true do |f| %>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
